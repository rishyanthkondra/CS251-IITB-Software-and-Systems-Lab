<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.journaldev.androidroomtodolist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".SubActivity"
            android:label="@string/sub_activity"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".TodoNoteActivity"
            android:label="@string/title_activity_todo_note"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".Dayview"
            android:label="@string/day_view"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".SubSubTaskactivity"
            android:label="@string/subsub_activity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>